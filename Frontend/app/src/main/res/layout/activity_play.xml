<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="392dp"
        android:layout_height="516dp"
        android:background="@drawable/greyblock"
        android:columnCount="3"
        android:padding="16dp"
        android:rowCount="3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.473"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.497">

        <!-- Your ImageViews go here -->
        <!-- Make sure to copy this ImageView block 9 times to fill the grid -->

        <ImageView
            android:id="@+id/whiteshape1"
            android:layout_width="111dp"
            android:layout_height="120dp"
            android:layout_row="0"
            android:layout_column="0"
            android:src="@drawable/whiteshape"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Repeat the ImageView for each cell in the grid -->

    </GridLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
