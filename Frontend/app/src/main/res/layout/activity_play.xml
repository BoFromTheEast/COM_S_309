<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="347dp"
        android:layout_height="458dp"
        android:background="@drawable/greyblock"
        android:padding="16dp"
        android:columnCount="3"
    android:rowCount="3"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <!-- Your ImageViews go here -->
    <!-- Make sure to copy this ImageView block 9 times to fill the grid -->
        <ImageView
            android:id="@+id/whiteshape1"
            android:layout_width="130dp"
            android:layout_height="105dp"
            android:src="@drawable/whiteshape"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    <!-- Repeat the ImageView for each cell in the grid -->

</GridLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
