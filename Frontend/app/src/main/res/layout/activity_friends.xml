<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <!-- activity_friends.xml -->
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Friend List Title -->
        <TextView
            android:id="@+id/friends_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Friend List"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"/>

        <!-- Friend Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/friend1_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Friend 1"
                android:onClick="onFriendButtonClick" />

            <Button
                android:id="@+id/friend2_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Friend 2"
                android:onClick="onFriendButtonClick" />

            <!-- Add more buttons as needed -->

        </LinearLayout>

        <!-- EditText for entering friend's number -->
        <EditText
            android:id="@+id/friend_number_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Friend's Number"/>

        <!-- Button to Add a Friend -->
        <Button
            android:id="@+id/add_friend_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Friend"
            android:onClick="onAddFriendClick"
            android:layout_marginTop="16dp"/>

        <!-- Buttons for Deleting Friends -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="bottom">

            <!-- Button to Delete a Friend -->
            <Button
                android:id="@+id/delete_friend_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Delete Friend"
                android:onClick="onDeleteFriendClick"
                android:layout_marginTop="16dp"
                android:layout_marginStart="8dp"/>
        </LinearLayout>

    </LinearLayout>


</androidx.appcompat.widget.LinearLayoutCompat>
